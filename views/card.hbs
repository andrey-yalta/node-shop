<h1>Cart</h1>
<div id="card">
{{#if courses.length}}

    <table>
        <thead>
        <tr>
            <th> Name of course</th>
            <th> Count</th>
            <th> Actions</th>
        </tr>
        </thead>
        <tbody>
        {{#each courses}}
        <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
                <button class="btn btn-small js-remove" data-id="{{_id}}">delete</button>
            </td>
        </tr>
        {{/each}}
        </tbody>
    </table>
    <p><strong>Price</strong> <span class="price">{{price}}</span></p>
    <form action="/orders" method="post">
        <button type="submit" class="btn">
            Сделать заказ
        </button>
    </form>
{{else}}
    <p>Card is empty</p>
{{/if}}
</div>